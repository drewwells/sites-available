# Catch-all default server.
server {
    listen 80 default_server;
    listen [::]:80 default_server;
    server_name _;

    default_type text/html;
    return 404 '<!doctype html><html><head><meta charset="utf-8"><title>404 - Not Found</title><style>body{margin:0;font-family:ui-monospace,SFMono-Regular,Menlo,Monaco,Consolas,monospace;background:#0f172a;color:#e2e8f0;display:flex;min-height:100vh;align-items:center;justify-content:center}main{max-width:720px;padding:48px}h1{font-size:48px;margin:0 0 16px 0}p{margin:0 0 12px 0;line-height:1.5}code{background:#1e293b;padding:2px 6px;border-radius:6px}</style></head><body><main><h1>404</h1><p>You found the void. There is no site here.</p><p>Check the hostname and try again.</p><p><code>jayloves.us</code></p></main></body></html>';
}
